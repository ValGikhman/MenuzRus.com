@model MenuzRus.Models.ContactModel
@using Extensions
@using Extensions
<link href="@Url.Content("~/Content/customer.css")" rel="stylesheet" />
<div class="container">

    @using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { @id = "form-contact", @class = "form-contact", role = "form", enctype = "multipart/form-data" })) {
        <div id="panel" class="panel panel-primary shadow">
            <div class="panel-heading">Contact</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-8 col-md-8">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control input-sm shadow", placeholder = "Enter your first name", required = "" })
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control input-sm shadow", placeholder = "Enter your last name", required = "" })
                        @Html.TextBoxFor(model => model.WorkPhone, new { @class = "form-control input-sm shadow", placeholder = "Enter your work phone number", required = "", pattern = RegexPattern.PHONE_NUMBER, type = "phone" })
                        @Html.TextBoxFor(model => model.MobilePhone, new { @class = "form-control input-sm shadow", placeholder = "Enter your work mobile number", pattern = RegexPattern.PHONE_NUMBER, type = "phone" })
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-sm shadow", placeholder = "Enter your email address", required = "", type = "email", pattern = RegexPattern.EMAIL })
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control input-sm shadow", placeholder = "Enter your password", required = "", type = "password" })
                        @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control input-sm shadow", placeholder = "Enter your password one more time", required = "", type = "password" })
                        <div id="passwordsError" class="hide alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            Password does not match confirmation password. Please revise.
                        </div>
                    </div>
                    <div class="imagerow col-lg-4 col-md-4">
                        <img src="@Url.Content(String.Format("/Images/Menus/{0}/Contacts/{1}?{2}", Model.CustomerId, Model.ImageUrl, Guid.NewGuid().ToString("N")))" class="preview img-thumbnail shadow" />
                        <input type="file" id="Image" name="Image" />
                        <div class="col-md-1 col-lg-1">
                            <a href="#" id="btnDeleteImage" class="btn btn-danger btn-mini shadow" onclick="deleteImage()">Delete Image</a>
                        </div>
                    </div>
                </div>
                <div class="panel-footer col-md-12 col-lg-12">
                    <div class="buttons col-md-offset-4">
                        <button id="btnSave" type="submit" class="btn btn-primary shadow">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

<script type="text/javascript">
    $(function () {
        initImageUpload();

        $("#ConfirmPassword").focusout(function (e) {
            $("#passwordsError").addClass("hide");
            if ($("#Password").val() != $("#ConfirmPassword").val()) {
                $("#passwordsError").removeClass("hide");
                $("#ConfirmPassword").focus();
                return false;
            }
            return true;
        });

        $("#form").submit(function (e) {
            if ($("#Password").val() != $("#ConfirmPassword").val()) {
                $("#passwordsError").show();
                $("#ConfirmPassword").focus();
                return false;
            }
            return true;
        });
    });
</script>