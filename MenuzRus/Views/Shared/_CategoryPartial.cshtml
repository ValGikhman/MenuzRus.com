@model MenuzRus.Models.CategoryModel
<link href="@Url.Content("~/Content/category.css")" rel="stylesheet" />
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">Edit Category</h4>
</div>
@using (Html.BeginForm("Save", "Category", FormMethod.Post, new { @id = "form-category", @class = "form-category", role = "form", enctype = "multipart/form-data" })) {
    <div class="container container-category">
        <div class="row">
            <div class="col-lg-8 col-md-8">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-sm shadow", placeholder = "Enter Category Name", required = "", type = "text", autofocus = "" })
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control input-sm shadow", rows = 5, placeholder = "Enter Category Name Description", type = "text" })
            </div>
            <div class="imagerow col-lg-4 col-md-4">
                <img src="@Url.Content(String.Format("/Images/Menus/{0}/Categories/{1}?{2}", Model.MyCompany.id, Model.ImageUrl, Guid.NewGuid().ToString("N")))" class="preview img-thumbnail shadow" />
                <input type="file" id="Image" name="Image" />
                <a href="#" id="btnDeleteImage" class="btn btn-danger btn-sm shadow" onclick="deleteImage()">Delete Image</a>
            </div>
        </div>
        <div class="row lastrow">
            <div class="col-md-4 col-lg-4">
                @Html.LabelFor(m => m.Side)
                @Html.DropDownListFor(m => m.Side, new SelectList(Enum.GetValues(typeof(Common.Side))), new { @class = "form-control input-sm shadow" })
            </div>
            <div class="col-md-4 col-lg-4">
                @Html.LabelFor(m => m.Active)
                @Html.DropDownListFor(m => m.Active, new SelectList(Enum.GetValues(typeof(Common.Status))), new { @class = "form-control input-sm shadow", @disabled = "disabled" })
            </div>
            <div class="col-md-4 col-lg-4">
                @Html.LabelFor(m => m.MenuId)
                @Html.DropDownListFor(m => m.MenuId, new SelectList(Model.Menus, "id", "Name"), new { @class = "form-control input-sm shadow col-md-3" })
            </div>

            @Html.HiddenFor(m => m.id)
            @Html.HiddenFor(m => m.ImageUrl)
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
}

<script>
    $(function () {
        initImageUpload($(".container-category"));
    })
</script>