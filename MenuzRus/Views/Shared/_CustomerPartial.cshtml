@model MenuzRus.Models.CustomerModel
@using Extensions
<link href="@Url.Content("~/Content/customer.css")" rel="stylesheet" />
<link href="@Url.Content("~/Scripts/TouchSpin/jquery.bootstrap-touchspin.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/JQuery/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/JQuery/jquery-ui.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/JQuery/jquery.blockUI.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/TouchSpin/jquery.bootstrap-touchspin.min.js")" type="text/javascript"></script>

<div id="bowlG" style="display: none;">
    <div id="bowl_ringG">
        <div class="ball_holderG">
            <div class="ballG">
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("SaveCustomer", "Customer", FormMethod.Post, new { @id = "form-customer", @class = "form-customer", role = "form", enctype = "multipart/form-data" })) {
    <div class="well container container-customer shadow">
        <div class="modal-header">
            <h2>Customer Form</h2>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-8">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon shadow leiba">Company</div>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control shadow", placeholder = "Enter your business name", required = "" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon shadow leiba">Address</div>
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control shadow", placeholder = "Enter your business address", required = "" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon shadow leiba">Address</div>
                        @Html.TextBoxFor(model => model.Address2, new { @class = "form-control shadow", placeholder = "Business address if needed" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon shadow leiba">City</div>
                        @Html.TextBoxFor(model => model.City, new { @class = "form-control shadow", placeholder = "Enter city", required = "" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group col-md-6 col-lg-6">
                        <div class="input-group-addon shadow leiba">State</div>
                        @Html.DropDownListFor(m => m.State, Model.States, new { @class = "form-control shadow" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon shadow leiba">Zip</div>
                        @Html.TextBoxFor(model => model.Zip, new { @class = "form-control shadow", placeholder = "Enter zip", required = "", pattern = "(^\\d{5}$)" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group col-md-6 col-lg-6">
                        <div class="input-group-addon shadow leiba">Phone</div>
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control shadow", placeholder = "Enter phone number" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group col-md-6 col-lg-6">
                        <div class="input-group-addon shadow leiba">Tax</div>
                        @Html.TextBoxFor(model => model.Tax, new { @class = "form-control shadow" })
                    </div>
                </div>
            </div>
            <div class="imagerow col-lg-4 col-md-4">
                <img src="@Url.Content(String.Format("~/Images/Menus/{0}/Customers/{1}?{2}", Model.id, Model.ImageUrl, Guid.NewGuid().ToString("N")))" class="preview img-thumbnail shadow" />
                <input type="file" id="Image" name="Image" />
                <div class="col-md-1 col-lg-1">
                    <a href="#" id="btnDeleteImage" class="btn btn-danger btn-mini shadow" onclick="deleteImage()">Delete Image</a>
                </div>
            </div>
            @Html.HiddenFor(m => m.id)
            @Html.HiddenFor(m => m.ImageUrl)
        </div>

        <div class="modal-footer">
            <button id="btnCancel" type="button" class="btn btn-default">Cancel</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        initImageUpload($(".container-user"));

        $("#btnCancel").click(function () {
            window.history.go(-1);
        });

        $("#Tax").TouchSpin({
            min: 0,
            max: 100,
            step: 0.25,
            decimals: 2,
            boostat: 5,
            maxboostedstep: 10,
            postfix: '%'
        });

        $(".bootstrap-touchspin-down, .bootstrap-touchspin-up, .bootstrap-touchspin-postfix").addClass("shadow");
    });
</script>