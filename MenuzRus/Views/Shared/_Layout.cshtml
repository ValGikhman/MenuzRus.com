<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Menuz R Us</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="digital menu design, digital menus, design menus " />
    <meta name="description" content="You web restorante complete solution" />

    <link href="@Url.Content("~/Content/base/jquery-ui.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-theme.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/web_style.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/JQuery/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/noty/packaged/jquery.noty.packaged.min.js")"></script>
    <script src="@Url.Content("~/Scripts/JQuery/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/JQuery/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/JQuery/jquery.blockUI.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/Common.js")" type="text/javascript"></script>
</head>
<script>
    var root = "@Url.Content("~/")";
</script>
<body>
    <div id="bowlG" style="display: none;">
        <div id="bowl_ringG">
            <div class="ball_holderG">
                <div class="ballG">
                </div>
            </div>
        </div>
    </div>
    @* Modal edit window *@
    <div class="modal fade modalEditForm" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div id="modalEditForm" class="modal-body">
                </div>
            </div>
        </div>
    </div>

    <div id="wrapper">
        <nav id="navigation" class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand gradient" href="http://www.menuzrus.com" target="_blank">MenuZ 'R' Us</a>
            </div>

            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown user-dropdown menuAlways">
                        <a href="#" class="dropdown-toggle gradient" data-toggle="dropdown">Navigate to <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Content("~/Designer/Index")">Items</a>
                            </li>
                            <li><a href="@Url.Content("~/Floor")">Floor</a>
                            </li>
                            <li><a href="@Url.Content("~/Order/Tables")">Order</a>
                            </li>
                            <li class="divider"></li>
                            <li><a href="@Url.Content("~/Order/Monitor")">Monitor</a>
                            </li>
                            <li><a href="@Url.Content("~/Order/Kitchen")">Kitchen</a>
                            </li>
                            <li class="divider"></li>
                            <li><a href="@Url.Content("~/MenuDesigner")">Menu designer</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown user-dropdown menuAlways">
                        @{
                            String picture = String.Empty;
                            Int32 customerId = 0;
                            Int32 userId = 0;

                            if (MenuzRus.SessionData.user != null) {
                                customerId = MenuzRus.SessionData.user.CustomerId;
                                userId = MenuzRus.SessionData.user.id;
                                picture = String.Format("~/Images/Menus/{0}/Users/{1}?{2}", customerId, MenuzRus.SessionData.user.ImageUrl, Guid.NewGuid().ToString("N"));
                            }
                            if (!String.IsNullOrEmpty(picture)) {
                            <a href="@Url.Content("~/User/Index/")@customerId" style="padding:0px">
                                <img src="@Url.Content(picture)" class="img-thumbnail" id="userImage" /></a>

                            }
                        }
                    </li>

                    <li class="dropdown user-dropdown menuAlways">
                        @{
                            String contact = "Unknown";
                            Int32 contactId = 0;
                            if (Model != null) {
                                if (Model.Me != null) {
                                    contact = String.Format("{0} {1}", Model.Me.FirstName, Model.Me.LastName);
                                }
                                if (Model.MyCompany != null) {
                                    customerId = Model.MyCompany.id;
                                    contactId = Model.Me.id;
                                }
                            }
                        }
                        <a id="userMenu" href="#" class="dropdown-toggle gradient" data-toggle="dropdown">
                            @contact
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Content("~/User/Index/")@contactId">My Profile</a></li>
                            <li><a href="@Url.Content("~/Customer/Index/")@customerId">My Company</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Content("~/Users/Index/")@customerId">My Users</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Content("~/Logout/")">Log Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-content-wrapper">
            @RenderBody()
        </div>
    </div>
</body>
</html>