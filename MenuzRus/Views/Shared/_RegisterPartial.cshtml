@model MenuzRus.Models.PaymentModel

<div class="modal-dialog"  style="width: 65vw; height: 70vh;">
    <div class="modal-content" style="width: 100%; height: 100%">
        <div class="modal-header">
            <button type="button" class="close pull-right" data-dismiss="modal" aria-hidden="true" style="zoom: 3">&times;</button>
        </div>
        <div id="registerContent" class="modal-body" style="padding-top: 0px;">
            <div>
                <div class="register col-lg-5">
                    @Html.Partial("_CashierPartial", @Model.Total)
                </div>
                <div class="payments col-lg-7 pull-right shadow">
                    @Html.Partial("_PaymentsPartial", @Model)
                </div>
            </div>
        </div>
    </div>
</div>
