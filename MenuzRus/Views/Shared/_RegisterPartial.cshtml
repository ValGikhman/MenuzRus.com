@model MenuzRus.Models.PaymentModel

<div class="modal-dialog"  style="width: 65vw; height: 70vh;">
    <div class="modal-content" style="width: 100%; height: 100%">
        <div class="modal-header">
            <button id="btnCloseModal" type="button" class="close pull-right" style="zoom: 2">&times;</button>
        </div>
        <div id="registerContent" class="modal-body" style="padding-top: 0px;">
            <div>
                <div class="register col-lg-4" style="top: 20px;">
                    @Html.Partial("_CashierPartial", @Model.Total)
                </div>
                <div class="payments col-lg-8 pull-right shadow">
                    @Html.Partial("_PaymentsPartial", @Model)
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function() {
        $("#btnCloseModal").on("click", function () {
            $("#btnRegister").show();
            $(".registerForm").modal("hide");
        })
    })

</script>
