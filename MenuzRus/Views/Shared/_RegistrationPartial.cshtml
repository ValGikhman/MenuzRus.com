@model MenuzRus.Models.RegistrationModel
<link href="@Url.Content("~/Content/registration.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/JQuery/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/JQuery/jquery-ui.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/JQuery/jquery.blockUI.js")" type="text/javascript"></script>

<div id="bowlG" style="display: none;">
    <div id="bowl_ringG">
        <div class="ball_holderG">
            <div class="ballG">
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("Index", "Registration", FormMethod.Post, new { @id = "form-registration", @class = "form-registration", role = "form", enctype = "multipart/form-data" })) {
    <div class="well container container-registration shadow">
        <div class="modal-header">
            <h2>Registration Form</h2>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 customer">
                <h5>Enter your business information</h5>
                @Html.TextBoxFor(model => model.Customer.Name, new { @class = "form-control input-sm shadow", placeholder = "Enter your business name", required = "" })
                @Html.TextBoxFor(model => model.Customer.Address, new { @class = "form-control input-sm shadow", placeholder = "Enter your business address", required = "" })
                @Html.TextBoxFor(model => model.Customer.Address2, new { @class = "form-control input-sm shadow", placeholder = "Business address if needed" })
                @Html.TextBoxFor(model => model.Customer.City, new { @class = "form-control input-sm shadow", placeholder = "Enter city", required = "" })
                <h5>State</h5>
                @Html.DropDownListFor(model => model.Customer.State, Utility.States.ToSelectListItems(), new { @class = "form-control input-sm shadow" })
                @Html.TextBoxFor(model => model.Customer.Zip, new { @class = "form-control input-sm shadow", placeholder = "Enter zip", required = "", pattern = "(^\\d{5}$)" })
                @Html.TextBoxFor(model => model.Customer.Phone, new { @class = "form-control input-sm shadow", placeholder = "Enter phone number" })
            </div>
            <div class="imagerow col-lg-4 col-md-4">
                <h5>Add your image</h5>
                <img src="" class="preview img-thumbnail shadow" />
                <input type="file" id="Image" name="Image" />
                <div class="col-md-1 col-lg-1">
                    <a href="#" id="btnDeleteImage" class="btn btn-danger btn-mini shadow" onclick="deleteImage()">Delete Image</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 personal">
                <h5>Enter your personal information</h5>
                @Html.TextBoxFor(model => model.User.FirstName, new { @class = "form-control input-sm shadow", placeholder = "Enter your first name", required = "" })
                @Html.TextBoxFor(model => model.User.LastName, new { @class = "form-control input-sm shadow", placeholder = "Enter your last name", required = "" })
                @Html.TextBoxFor(model => model.User.WorkPhone, new { @class = "form-control input-sm shadow", placeholder = "Enter your work phone number", required = "", pattern = Extensions.RegexPattern.PHONE_NUMBER, type = "phone" })
                @Html.TextBoxFor(model => model.User.MobilePhone, new { @class = "form-control input-sm shadow", placeholder = "Enter your mobile number", pattern = Extensions.RegexPattern.PHONE_NUMBER, type = "phone" })
                @Html.TextBoxFor(model => model.User.Email, new { @class = "form-control input-sm shadow", placeholder = "Enter your email address", required = "", type = "email", pattern = Extensions.RegexPattern.EMAIL })
                @Html.TextBoxFor(model => model.User.Password, new { @class = "form-control input-sm shadow", placeholder = "Enter your password", required = "", type = "password" })
                @Html.TextBoxFor(model => model.User.ConfirmPassword, new { @class = "form-control input-sm shadow", placeholder = "Enter your password one more time", required = "", type = "password" })
                <div id="passwordsError" class="hide alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    Password does not match confirmation password. Please revise.
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button id="btnCancel" type="button" class="btn btn-default">Cancel</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        initImageUpload($(".container-registration"));
        $("#ConfirmPassword").focusout(function (e) {
            $("#passwordsError").addClass("hide");
            if ($("#Password").val() != $("#ConfirmPassword").val()) {
                $("#passwordsError").removeClass("hide");
                $("#ConfirmPassword").focus();
                return false;
            }
            return true;
        });

        $("#btnCancel").click(function () {
            window.location = $.validator.format("{0}login/", root);
        })

        $("#form").submit(function (e) {
            if ($("#Password").val() != $("#ConfirmPassword").val()) {
                $("#passwordsError").show();
                $("#ConfirmPassword").focus();
                return false;
            }
            return true;
        });
    });
</script>